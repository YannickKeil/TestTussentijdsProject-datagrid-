<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTussentijdsProject"
        xmlns:Generic="clr-namespace:System.Collections.Generic;assembly=System.Core" x:Class="TestTussentijdsProject.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                

                <DataGrid x:Name="dataGrid1" Width="auto" ColumnWidth="*" MinColumnWidth="100" IsManipulationEnabled="True" SelectionMode="Single" SelectionUnit="Cell">

                </DataGrid>
                <Button x:Name="btnSelectedItem" Click="btnSelectedItem_Click">item</Button>
                <Button x:Name="btnSelectedrow" Click="btnSelectedrow_Click">row</Button>

            </StackPanel>
        </ScrollViewer>
        
    </Grid>
</Window>
